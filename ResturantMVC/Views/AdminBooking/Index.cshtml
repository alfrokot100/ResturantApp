@model IEnumerable<ResturantMVC.Models.BookingViewModel>

<h2>Bokningar</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Skapa ny bokning</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Email</th>
            <th>Datum</th>
            <th>Gäster</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Name</td>
                <td>@booking.Email</td>
                <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@booking.Guest</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info btn-sm">Detaljer</a>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning btn-sm">Ändra</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger btn-sm">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>
