@model ResturantMVC.Models.HomeViewModel

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1>@Model.RestaurantName</h1>
        <p class="lead">@Model.Description</p>
    </div>

    <h2>Populära rätter</h2>
    <div class="row">
        @foreach (var dish in Model.PopularDishes)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    
                    <div class="card-body">
                        <h5 class="card-title">@dish.Name</h5>
                        <p class="card-text">@dish.Description</p>
                        <p><strong>@dish.Price.ToString("C")</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-5 text-center">
        <a href="/Menu" class="btn btn-primary btn-lg">Se hela menyn</a>
        <a href="/Booking" class="btn btn-success btn-lg">Boka bord</a>
    </div>
</div>
